<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.dastuhl.hours.LoginActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/user_identification_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hours_grey"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="32dp"
        android:gravity="center" />

    <ListView
        android:id="@+id/navigator_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ccc"
        tools:context="de.dastuhl.hours.navigation.NavigationDrawerFragment" />


</LinearLayout>


