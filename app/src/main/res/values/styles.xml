<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/hours_blue</item>
        <item name="colorPrimaryDark">@color/hours_dark_blue</item>
    </style>

    <style name="HoursTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Hours.NotTitle</item>
    </style>

    <style name="ActionBar.Solid.Hours.NotTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_history_white_48dp</item>
    </style>

</resources>
